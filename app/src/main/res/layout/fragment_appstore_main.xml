<?xml version="1.0" encoding="utf-8"?>
<com.slf.frame.tv.widget.TvRelativeLayoutAsGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:animationType="DEFAULT"
    app:boarder="@dimen/px27"
    app:cursorRes="@drawable/shadow"
    app:delay="0"
    app:durationLarge="50"
    app:durationSmall="50"
    app:durationTranslate="3"
    app:scale="1.04"
    >

    <ImageView
        android:id="@+id/btn_app_all"
        style="@style/app_item_big"
        android:layout_width="@dimen/px528"
        android:nextFocusDown="@+id/btn_app_store"
        android:scaleType="fitXY"
        android:src="@drawable/selector_bg_app_all"
        />


    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_store"
        style="@style/app_item_big"
        android:layout_alignLeft="@id/btn_app_all"
        android:layout_below="@id/btn_app_all"
        android:layout_marginTop="@dimen/px6"
        android:background="@drawable/selector_bg_app_red"
        app:app_name="应用商店"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_0"
        style="@style/app_item_big"
        android:layout_alignRight="@id/btn_app_all"
        android:layout_alignTop="@id/btn_app_store"
        android:layout_below="@id/btn_app_all"
        android:background="@drawable/selector_bg_app_blue_light"

        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_1"
        style="@style/app_item_big"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px6"
        android:layout_toRightOf="@id/btn_app_all"
        android:background="@drawable/selector_bg_app_orange"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_2"
        style="@style/app_item_big"
        android:layout_alignLeft="@id/btn_app_1"
        android:layout_alignTop="@id/btn_app_store"
        android:layout_below="@id/btn_app_all"
        android:background="@drawable/selector_bg_app_green"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_3"
        style="@style/app_item_big"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px6"
        android:layout_toRightOf="@id/btn_app_1"
        android:background="@drawable/selector_bg_app_green"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_4"
        style="@style/app_item_big"
        android:layout_alignLeft="@id/btn_app_3"
        android:layout_alignTop="@id/btn_app_store"
        android:layout_below="@id/btn_app_all"
        android:background="@drawable/selector_bg_app_red"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_5"
        style="@style/app_item_big"
        android:layout_marginLeft="@dimen/px6"
        android:layout_toRightOf="@id/btn_app_3"
        android:background="@drawable/selector_bg_app_blue"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_6"

        style="@style/app_item_big"
        android:layout_alignLeft="@id/btn_app_5"
        android:layout_alignTop="@id/btn_app_store"
        android:layout_below="@id/btn_app_all"
        android:background="@drawable/selector_bg_app_orange"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_7"
        style="@style/app_item_small"
        android:layout_marginLeft="@dimen/px6"
        android:layout_toRightOf="@id/btn_app_5"
        android:background="@drawable/selector_bg_app_blue"
        app:app_name_visibility="gone"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_8"
        style="@style/app_item_small"
        android:layout_alignLeft="@id/btn_app_7"
        android:layout_below="@id/btn_app_7"
        android:layout_marginTop="@dimen/px6"
        android:background="@drawable/selector_bg_app_blue"
        app:app_name_visibility="gone"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_9"
        style="@style/app_item_small"
        android:layout_alignLeft="@id/btn_app_7"
        android:layout_alignTop="@id/btn_app_store"
        android:layout_below="@id/btn_app_all"
        android:background="@drawable/selector_bg_app_blue"
        app:app_name_visibility="gone"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_10"
        style="@style/app_item_small"
        android:layout_alignLeft="@id/btn_app_7"
        android:layout_below="@id/btn_app_9"
        android:layout_marginTop="@dimen/px6"
        android:background="@drawable/selector_bg_app_blue"
        app:app_name_visibility="gone"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_11"
        style="@style/app_item_small"
        android:layout_marginLeft="@dimen/px6"
        android:layout_toRightOf="@id/btn_app_7"
        android:background="@drawable/selector_bg_app_blue"
        app:app_name_visibility="gone"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_12"
        style="@style/app_item_small"
        android:layout_alignLeft="@id/btn_app_11"
        android:layout_below="@id/btn_app_11"
        android:layout_marginTop="@dimen/px6"
        android:background="@drawable/selector_bg_app_blue"
        app:app_name_visibility="gone"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_13"
        style="@style/app_item_small"
        android:layout_alignLeft="@id/btn_app_11"
        android:layout_alignTop="@id/btn_app_store"
        android:layout_below="@id/btn_app_all"
        android:background="@drawable/selector_bg_app_blue"

        app:app_name_visibility="gone"
        />

    <com.ccdt.ottclient.ui.widget.AppPageItemLayout
        android:id="@+id/btn_app_14"
        style="@style/app_item_small"
        android:layout_alignLeft="@id/btn_app_11"
        android:layout_below="@id/btn_app_13"
        android:layout_marginTop="@dimen/px6"
        android:background="@drawable/selector_bg_app_blue"
        app:app_name_visibility="gone"
        />

</com.slf.frame.tv.widget.TvRelativeLayoutAsGroup>

