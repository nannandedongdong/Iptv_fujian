<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="@dimen/px1000"
              android:layout_height="@dimen/px500"
              android:background="@drawable/bg"
              android:orientation="vertical"
              android:padding="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="付款提示"
        android:textColor="@color/base_title_unselected"
        android:textSize="22sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:layout_marginLeft="@dimen/px15"
        android:layout_marginRight="@dimen/px15"
        android:layout_marginTop="@dimen/px20"
        android:background="#33FFFFFF"
        />

    <TextView
        android:id="@+id/txt_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/px20"
        android:textColor="@color/text_color_blue"
        android:textSize="20sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="@dimen/px240"
            android:layout_height="@dimen/px80"
            android:background="@drawable/selector_bg_button_base"
            android:text="付款"
            android:textColor="@color/white"
            android:textSize="26sp"
            />

        <Button
            android:layout_marginLeft="@dimen/px30"
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/px240"
            android:layout_height="@dimen/px80"
            android:layout_toRightOf="@id/btn_pay"
            android:background="@drawable/selector_bg_button_base"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="26sp"
            />
    </RelativeLayout>
</LinearLayout>