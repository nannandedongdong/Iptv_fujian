<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/btnNews"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px77"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/px43"
            android:background="@drawable/selector_search_result"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txtNewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资讯"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/txtNewsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtNewsTitle"
                android:textSize="20sp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnPaike"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px77"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/px43"
            android:layout_toLeftOf="@id/btnNews"
            android:background="@drawable/selector_search_result"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txtPaikeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍客"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/txtPaikeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtPaikeTitle"
                android:textSize="20sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnMovie"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px77"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/px43"
            android:layout_toLeftOf="@id/btnPaike"
            android:background="@drawable/selector_search_result"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txtMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/txtMovieNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtMovieTitle"
                android:textSize="20sp"
                />
        </RelativeLayout>


    </RelativeLayout>


    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/recycler_search"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"-->
    <!--android:clipChildren="false"-->
    <!--android:clipToPadding="false"-->
    <!--android:paddingBottom="6dp"-->
    <!--android:paddingLeft="12dp"-->
    <!--android:paddingRight="12dp"-->
    <!--android:paddingTop="26dp"-->
    <!--/>-->

    <io.viva.tv.app.widget.FocusedGridView
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:columnWidth="@dimen/px252"
        android:horizontalSpacing="@dimen/px21"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:paddingLeft="@dimen/px18"
        android:paddingRight="@dimen/px18"
        android:paddingTop="20dip"
        android:scrollbars="none"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="@dimen/px61"
        />

</LinearLayout>