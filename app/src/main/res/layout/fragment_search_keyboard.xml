<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="搜索"
        android:textColor="#465281"
        android:textSize="26sp"
        app:layout_marginLeftPercent="6.7%"
        />

    <EditText
        android:id="@+id/txtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search_txt"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="输入片名的首字母"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textColor="#465281"
        android:textColorHint="#6d83c9"
        android:textSize="22sp"
        app:layout_marginLeftPercent="8%"
        app:layout_marginRightPercent="7%"
        app:layout_marginTopPercent="18%"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grid_search_keyboard"
        android:layout_width="0dp"
        android:layout_height="340dp"
        app:layout_marginLeftPercent="11%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="76%"
        />

    <View
        android:id="@+id/center_pointer"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_below="@id/grid_search_keyboard"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@id/grid_search_keyboard"
        android:layout_marginRight="36dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/center_pointer"
        android:background="@drawable/selector_search_keyboard"
        android:drawableLeft="@drawable/selector_keyboard_del"
        android:gravity="center"
        android:nextFocusRight="@+id/btn_clear"
        android:nextFocusUp="@null"
        android:paddingLeft="23dp"
        android:text="删除"
        android:textColor="@color/color_keyboard_key"
        android:textSize="22sp"
        />


    <Button
        android:id="@+id/btn_clear"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@id/grid_search_keyboard"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/center_pointer"
        android:background="@drawable/selector_search_keyboard"
        android:drawableLeft="@drawable/selector_keyboard_clear"
        android:gravity="center"
        android:nextFocusRight="@+id/view_middle"
        android:paddingLeft="23dp"
        android:text="清空"
        android:textColor="@color/color_keyboard_key"
        android:textSize="22sp"
        />
</android.support.percent.PercentRelativeLayout>