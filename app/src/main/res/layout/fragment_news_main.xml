<?xml version="1.0" encoding="utf-8"?>
<com.slf.frame.tv.widget.TvRelativeLayoutAsGroup
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    app:animationType="DEFAULT"
    app:delay="0"
    app:durationLarge="50"
    app:durationSmall="50"
    app:scale="1.03"
    >

    <!-- 资讯一级界面 - 左 - 上 -->
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/btn_news_main_left_up"
        style="@style/news_item"
        android:layout_width="@dimen/px462"
        android:layout_height="@dimen/px551"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/txt_title_left_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_widthPercent="85%"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_title_left_up"
            android:layout_below="@id/txt_title_left_up"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_from_left_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人民网"
                android:textColor="#80ffffff"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/txt_time_left_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1小时前"
                android:textColor="#80ffffff"
                android:textSize="14sp"
                />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_left_up"
            android:layout_width="@dimen/px402"
            android:layout_height="@dimen/px306"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_default"
            />
    </android.support.percent.PercentRelativeLayout>


    <!-- 资讯一级界面 - 左 - 下 -->
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/btn_news_main_left_down"
        style="@style/news_item"
        android:layout_width="@dimen/px462"
        android:layout_height="@dimen/px197"
        android:layout_below="@id/btn_news_main_left_up"
        android:layout_marginTop="@dimen/px6"
        >

        <TextView
            android:id="@+id/txt_title_left_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:text="【把春天带回家】这些花能让家中生机盎然"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_widthPercent="87%"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_from_left_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金黔旅游"
                />

            <TextView
                android:id="@+id/txt_time_left_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="18小时前"
                />
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>


    <!-- 资讯一级界面 - 中 -->
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/btn_news_main_center"
        style="@style/news_item"
        android:layout_width="@dimen/px863"
        android:layout_height="@dimen/px753"
        android:layout_marginLeft="@dimen/px6"
        android:layout_toRightOf="@id/btn_news_main_left_up"
        android:nextFocusRight="@+id/btn_news_main_right_0"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/txt_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:layout_widthPercent="91%"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_title_center"
            android:layout_below="@id/txt_title_center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_from_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/txt_time_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_center"
            android:layout_width="@dimen/px782"
            android:layout_height="@dimen/px551"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_default"
            />

    </android.support.percent.PercentRelativeLayout>


    <!-- 资讯一级界面 - 右 -->
    <com.ccdt.ottclient.ui.widget.NewsPageItemLayout
        android:id="@+id/btn_news_main_right_0"
        style="@style/news_item_right"
        android:layout_marginLeft="@dimen/px6"
        android:layout_toRightOf="@id/btn_news_main_center"
        />

    <ImageView
        android:id="@+id/line_1"
        android:layout_width="@dimen/px531"
        android:layout_height="@dimen/px2"
        android:layout_alignLeft="@id/btn_news_main_right_0"
        android:layout_below="@id/btn_news_main_right_0"
        android:background="#33000000"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:src="#55ffffff"
        />

    <com.ccdt.ottclient.ui.widget.NewsPageItemLayout
        android:id="@+id/btn_news_main_right_1"
        style="@style/news_item_right"
        android:layout_alignLeft="@id/btn_news_main_right_0"
        android:layout_below="@id/line_1"
        />

    <ImageView
        android:id="@+id/line_2"
        android:layout_width="@dimen/px531"
        android:layout_height="@dimen/px2"
        android:layout_alignLeft="@id/btn_news_main_right_0"
        android:layout_below="@id/btn_news_main_right_1"
        android:background="#33000000"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:src="#55ffffff"
        />

    <com.ccdt.ottclient.ui.widget.NewsPageItemLayout
        android:id="@+id/btn_news_main_right_2"
        style="@style/news_item_right"
        android:layout_alignLeft="@id/btn_news_main_right_0"
        android:layout_below="@id/line_2"
        />


    <ImageView
        android:id="@+id/line_3"
        android:layout_width="@dimen/px531"
        android:layout_height="@dimen/px2"
        android:layout_alignLeft="@id/btn_news_main_right_0"
        android:layout_below="@id/btn_news_main_right_2"
        android:background="#33000000"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:src="#55ffffff"
        />

    <com.ccdt.ottclient.ui.widget.NewsPageItemLayout
        android:id="@+id/btn_news_main_right_3"
        style="@style/news_item_right"
        android:layout_alignLeft="@id/btn_news_main_right_0"
        android:layout_below="@id/line_3"
        />


    <ImageView
        android:id="@+id/line_4"
        android:layout_width="@dimen/px531"
        android:layout_height="@dimen/px2"
        android:layout_alignLeft="@id/btn_news_main_right_0"
        android:layout_below="@id/btn_news_main_right_3"
        android:background="#33000000"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:src="#55ffffff"
        />


    <RelativeLayout
        android:id="@+id/btn_news_main_more"
        style="@style/news_item_right"
        android:layout_height="@dimen/px99"
        android:layout_alignLeft="@id/btn_news_main_right_0"
        android:layout_below="@id/line_4"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/ic_arrow_right_more"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </RelativeLayout>


</com.slf.frame.tv.widget.TvRelativeLayoutAsGroup>