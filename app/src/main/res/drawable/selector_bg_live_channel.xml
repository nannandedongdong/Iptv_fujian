<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">

        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#00BFFE"
                />
            <solid
                android:color="@color/transparent"
                />
        </shape>


    </item>
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/transparent"
                />
            <stroke
                android:width="0dp"
                />
        </shape>
    </item>
</selector>